<% provide(:title, "Edit Task") %>

<div class="tasks-edit">
  <div class=　"container">
    <h1> タスク編集 </h1>
    <%= form_tag edit_user_task_path do %>
      <div class= "row">
        <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @tasks, url: user_tasks_path(@current_user),local: true, method: :create) do |f| %>
          <%= render '/shared/error_messages' %>
          
          <%= f.label :名称, class: "label-form" %>
          <%= f.text_field :name, class: "form-control" %>
          
          <%= f.label :詳細, class: "label-form" %>
          <%= f.text_area :description, rows: 5, class: "form-control" %>
  
          <%= f.submit "保存", class: "btn btn-sg btn-primary btn-form" %>
          <%= link_to "キャンセル", user_tasks_path(@current_user.id), class: "btn btn-sg btn-default btn-cancel" %>
          
        <% end %>
        </div>
      </div>
    <% end %>  
  </div>
</div>