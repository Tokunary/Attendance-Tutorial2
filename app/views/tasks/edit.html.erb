<% provide(:title, "Edit Task") %>

  <h1> タスク編集 </h1>
  
    <div class= "row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @task, url: user_task_path(@user, @task), local: true) do |f| %>
          <%= render 'shared/error_messages', object: @task %>

          <%= f.label :名称, class: "label-form" %>
          <%= f.text_field :name, class: "form-control" %>
          
          <%= f.label :詳細, class: "label-form" %>
          <%= f.text_area :description, rows:5, class: "form-control" %>
  
          <%= f.submit "更新", class: "btn btn-sg btn-primary btn-form" %>
          <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-sg btn-default btn-cancel" %>
          
        <% end %>
        </div>
    </div>
