<% provide(:title, @user.name) %>
<div class= "tasks-index">
  <div class="container">
    <h1><%= @user.name %>のタスク一覧</h1>
    <div class= "row">
      <div class= "col-md-10 col-md-offset-1">
        <a class="btn btn-primary pull-right" href= "/users/:id/tasks/new" >タスクの新規作成 </a>
      
      <table class= "table table-hover" id="table-tasks">
        <thead>
          <tr>
            <th>名称</th>
            <th>作成日</th>
          </tr>
        </thead>

          <% @tasks.each do |task| %>
           
              <tr>
                <td><%= task.name %></td>
                <td><%= task.created_at %></td>
                <td>
                </td>
              </tr>
          <% end %>
        
      </table>
      
      </div>
    </div>
    
  </div>
</div>
