<% provide(:title, @current_user.name) %>
<div class= "tasks-index">
  <div class="container">
    <h1>管理者のタスク一覧</h1>
    <div class= "row">
      <div class= "col-md-10 col-md-offset-1">
        <a class="btn btn-primary pull-right" href= "/users/:id/tasks/new" >タスクの新規作成 </a>
      
      <table class= "table table-hover" id="table-tasks">
        <thead>
          <tr>
            <th><%= Task.human_attribute_name :名称 %></th>
            <th><%= Task.human_attribute_name :作成日 %></th>
          </tr>
        </thead>

          <% @tasks.each do |task| %>
           
              <tr>
                <td><%= link_to task.name, task %></td>
                <td>
                  <% if current_user.admin? && !current_user?(user) %>
                    <%= link_to "編集", edit_task_path(current_user),class: "btn btn-success" %>
                    <%= link_to "削除", task, method: :delete,
                    data: { confirm: "「#{@tasks}」を削除します。よろしいですか？" },
                    class: "btn btn-danger" %>
                    <% end %>
                </td>
              </tr>
            </div>
          <% end %>
        
      </table>
      
      </div>
    </div>
    
  </div>
</div>
