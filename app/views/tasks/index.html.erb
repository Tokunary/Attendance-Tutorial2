<div class= "tasks-index">
  <div class="container">
    <h1>管理者のタスク一覧</h1>
    <div class= "row">
      <div class= "col-md-10 col-md-offset-1">
        <a class="btn btn-primary pull-right" href= "/tasks/new" >タスクの新規作成 </a>
      
      <table class= "table table-hover" id="table-tasks">
        <thead>
          <tr>
            <th>名称</th>
            <th>作成日</th>
          </tr>
        </thead>
      </table>
      
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.name, task %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
      
      
      </div>
    </div>
    
  </div>

</div>
