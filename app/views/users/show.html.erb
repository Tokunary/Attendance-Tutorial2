<% provide(:title, @user.name) %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <tbody>
        <h1>プロフィール</h1>
        <tr>
          <th>ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :email %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :created_at %></th>
          <td><%= @user.created_at %></td>
        </tr>
      </tbody>
    </table>
  </div>    
</div>
