 <% provide(:title, "Top") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | AttendanceApp</title>  
  </head>
    <div class="jumbotron">
      <h1 id="top-main-title">TaskApp</h1>
      <p>
       TaskAppは簡易ToDo管理ツールです。
      </p>
    
      <p>↓↓初めてのご利用↓↓</p>
    
      <center>
        <%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary" %>
        <%= link_to "Log In", login_path, class: "btn btn-lg btn-primary" %>
      </center>
    </div>
    
  <div class="jumbotron2">
  <% provide(:title, "login") %>
  <h1>ログイン</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  
        <%= f.label :email, class: "label-login" %>
        <%= f.email_field :email, class: 'form-control' %>
  
        <%= f.label :password, class: "label-login" %>
        <%= f.password_field :password, class: 'form-control' %>
        <% end %>
    </div>
  </div>
</html>